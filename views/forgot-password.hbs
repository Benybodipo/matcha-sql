<br><br>
<form action="/forgot-password" method="post" class="register clearfix" style="margin: 0 auto;">
	<h2>FORGOT PASSWORD</h2>
	<p class="err-msg"></p>
	<input class="input" style="width: 100%;" name="email" type="email" placeholder="Email address" value="{{inputs.email}}">
	<small></small>
    <br>
	<button style="float: left;" class="btn shallow fill">Request link</button>
</form>
{{#if messages.error}}		
	<script>
		{{#each messages.error}}
			if (`{{{this.param}}}`)
				$(`input[name="{{{this.param}}}"] + small`).css({'color': 'red'}).text(`{{{this.msg}}}`);
			else
				$('p.err-msg').css({'color': 'red', 'text-align': 'center', 'margin-bottom': '15px'}).text(`{{{this.msg}}}`);
		{{/each}}
	</script>
{{/if}}
